<%- include('../header.ejs') -%>

<div class="header-display">
    <h1>products page</h1>
    <a class="add-product" href="/products/create">add product</a>
</div>


  <% products.forEach(function(product){ %>
    <div class="container">
      <div class="card mb-3">
        <div class="card-header product-header">
          <span><%= product.name %></span>
          <img src="<%= product.imageUrl %>" width="50px" height="50px"/>
        </div>
        <div class="card-body">
          <h5 class="card-title">health care</h5>
          <p class="card-text"><%= product.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-end">
          <a href="/products/<%= product.id %>/update" class="btn btn-info me-2 ps-3 pe-3 fw-bold">update</a>
          <a href="/products/<%= product.id %>/delete" class="btn btn-danger ps-3 pe-3 fw-bold">delete</a>
        </div>
      </div>
    </div>
  <% }) %>
  

<%- include('../footer.ejs') -%>